# env.example
# OriginFlow Environment Configuration Template

# ======================
# Core Application
# ======================
# Environment: development, staging, production
ENVIRONMENT=development

# API Configuration
API_PREFIX=/api/v1
DEBUG=true

# ======================
# Security
# ======================
# Secret key for JWT tokens (CHANGE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-in-production-make-it-very-long-and-random

# CORS Configuration
CORS_ORIGIN_REGEX=http://(localhost|127\.0\.0\.1):\d+$

# Authentication
ENABLE_AUTH=true
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ======================
# Database Configuration
# ======================
# PostgreSQL (Production)
DATABASE_URL=postgresql://originflow:password@localhost:5432/originflow

# SQLite (Development)
# DATABASE_URL=sqlite+aiosqlite:///./originflow.db

# ======================
# External Services
# ======================
# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL_ROUTER=gpt-4o-mini
OPENAI_MODEL_AGENTS=gpt-4o-mini
# Edge routing provider: elk | builtin | client
EDGE_ROUTER_PROVIDER=builtin

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=changeme

# ======================
# Vector Database
# ======================
# Qdrant Configuration
VECTOR_BACKEND=qdrant
QDRANT_HOST=localhost:6333
QDRANT_COLLECTION=ai_action_vectors
VECTOR_SIZE=384

# ======================
# File Storage
# ======================
# Local filesystem (development)
STORAGE_BACKEND=local
UPLOADS_DIR=./backend/static/uploads

# ======================
# AI/ML Configuration
# ======================
# Model Configuration
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
TEMPERATURE=0.0
MAX_TOKENS=512

# Datasheet Processing
USE_RULE_BASED=true
USE_TABLE_EXTRACTION=true
USE_AI_EXTRACTION=true
USE_OCR_FALLBACK=false

# Rate Limiting
COMMANDS_PER_MINUTE=30
REQUESTS_PER_MINUTE=60

# ======================
# Monitoring & Logging
# ======================
# Logging
LOG_LEVEL=INFO
JSON_LOGS=true
LOG_FILE=./logs/originflow.log

# ======================
# Frontend Configuration
# ======================
# Frontend API URL
VITE_API_URL=http://localhost:8000/api/v1

# Feature Flags
VITE_ENABLE_AUTH=true
VITE_ENABLE_VOICE=true
VITE_ENABLE_OFFLINE=false
